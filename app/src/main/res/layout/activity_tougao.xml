<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jredu.health.fragment.AuditFragment">
    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/bar_backgroud">
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_back_normal"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/img_write"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="提交"
            android:textSize="18sp"
            android:textColor="#5e4923"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我要投稿"
            android:textSize="20sp"
            android:textColor="#5e4923">
        </TextView>
    </RelativeLayout>
    <EditText
        android:layout_margin="20dp"
        android:layout_below="@id/rl"
        android:id="@+id/et_comm"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@null"
        android:gravity="start"
        android:textColorHint="#bfbeba"
        android:textSize="14sp"
        android:hint="您的投稿经过段友审核才能发布哦！我们的目标是：专注内涵，拒绝黄反！可以矫情，不要煽情！敬告：发布色情敏感内容会被封号处理。"/>
    <RelativeLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/et_comm"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="bottom">
        <TextView
            android:id="@+id/tv_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="图片"
            android:textSize="10sp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:drawablePadding="5dp"
            android:drawableTop="@mipmap/ic_publish_take_picture_normal"/>
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/tv_picture"
            android:id="@+id/tv_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="视频"
            android:textSize="10sp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:drawablePadding="5dp"
            android:drawableTop="@mipmap/ic_publish_take_video_normal"/>
        <CheckBox
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="匿名"
            android:textSize="16sp"
            android:padding="10dp"
            android:textColor="@drawable/tougao_cb_textcolor"
            android:button="@drawable/tougao_cb_bg"/>
    </RelativeLayout>
</RelativeLayout>

