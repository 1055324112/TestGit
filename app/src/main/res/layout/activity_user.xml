<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jredu.health.UserActivity">
    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/bar_backgroud">
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/ic_back_normal" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="账号管理"
            android:textColor="#5e4923"
            android:textSize="20sp"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/img_me"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:src="@mipmap/icon"/>
    <RelativeLayout
        android:clickable="true"
        android:id="@+id/rl_changeName"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/setting_bg">
        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="用户名"
            android:textColor="#ccc"
            android:textSize="16sp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/name"
            android:layout_toRightOf="@id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#333"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="我"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/setting_bg">
        <TextView
            android:id="@+id/userSex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="性别"
            android:textColor="#ccc"
            android:textSize="16sp"
            android:layout_centerVertical="true"/>
        <RadioGroup
            android:id="@+id/rgSex"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:background="@drawable/setting_rg_bg">
            <RadioButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:button="@null"
                android:layout_weight="1"
                android:text="女"
                android:textColor="#898787"
                android:textSize="16sp"
                android:id="@+id/woman"
                android:gravity="center"
                android:background="@drawable/setting_rb_left"/>
            <RadioButton
                android:checked="true"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:button="@null"
                android:layout_weight="1"
                android:text="男"
                android:textColor="#898787"
                android:textSize="16sp"
                android:id="@+id/man"
                android:gravity="center"
                android:background="@drawable/setting_rb_medium"/>
            <RadioButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:button="@null"
                android:layout_weight="1"
                android:text="不明"
                android:textColor="#898787"
                android:textSize="16sp"
                android:id="@+id/noSex"
                android:gravity="center"
                android:background="@drawable/setting_rb_right"/>
        </RadioGroup>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:text="签名"
        android:textColor="#ccc"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:padding="10dp"/>
    <TextView
        android:id="@+id/qianming"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:padding="10dp"
        android:text="这个人很懒，什么也没留下"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:background="@drawable/setting_bg"/>
    <Button
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#fff"
        android:text="退出登录"
        android:gravity="center"
        android:id="@+id/cancel"
        android:textSize="18sp"
        android:textColor="#c4fa220f"/>
</LinearLayout>
