<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/pop_close_bg">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:text="选择不喜欢的理由"
            android:textSize="16sp"
            android:textColor="#fff"
            android:background="@drawable/pop_close_tv_bg"
            android:gravity="center_horizontal|center_vertical"/>
        <CheckBox
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:text="搞笑"
            android:button="@null"
            android:drawableRight="@drawable/pop_cb_select_bg"
            />
        <CheckBox
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:text="不喜欢"
            android:button="@null"
            android:drawableRight="@drawable/pop_cb_select_bg"
            />
        <CheckBox
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:text="内容重复"
            android:button="@null"
            android:drawableRight="@drawable/pop_cb_select_bg"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">
            <Button
                android:id="@+id/disAgree"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="取消"
                android:background="@drawable/pop_btnleft_bg"/>
            <Button
                android:id="@+id/agree"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="确定"
                android:textColor="#fa7b7b"
                android:background="@drawable/pop_btnright_bg"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>